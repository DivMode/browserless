{
  "manifest_version": 3,
  "name": "Browserless Recorder",
  "version": "1.0",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["rrweb-recorder.js"],
    "run_at": "document_start",
    "world": "MAIN",
    "all_frames": true
  }],
  "web_accessible_resources": [{
    "resources": ["*.js"],
    "matches": ["<all_urls>"]
  }]
}
